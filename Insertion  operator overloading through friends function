// Insertion  operator overloading through friends function

#include<bits/stdc++.h>
using namespace std;

class Complex
{
    private:
     int real;
     int img;
     
     public:
     
     Complex(int r=0, int i=0)
     {
         real =r;
         img =i;
     }
     
     
    
     
     friend ostream& operator<<(ostream &obj1, Complex &obj2);
     
     
     
     
     
};

ostream& operator<<(ostream &obj1, Complex &obj2)
{
    obj1<<obj2.real<<"+"<<obj2.img<<"i";
    
    return obj1;
}

int main()
{
    Complex c1(2,3);
   operator<<(cout,c1);
}
