
//we can make operator to work for user-defined class

#include<bits/stdc++.h>
using namespace std;

class Complex
{
    int real;
    int img;
    
    public:
     
     Complex(int r=0, int i=0)
     {
         real=r;
         img=i;
         
     }
     
     Complex operator +(Complex obj)
     //Complex add(Complex obj)
     
     {
         Complex temp;
         
         temp.real = real + obj.real;
         temp.img =  img + obj.img;
     }
     
     void print()
     {
         cout << real << " + i" << img << endl;
     }
     
     
};

int main()
{
    Complex c1(2,3);
    Complex c2(4,5);
    Complex c3;
    
    c3= c1+c2;
    // c3= c1.add(c2);
    
    c3.print();
}
